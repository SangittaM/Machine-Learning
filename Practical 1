# Step 1: Import necessary modules
import pandas as pd
import matplotlib.pyplot as plt
from google.colab import files

# Step 2: Upload the CSV file from your local machine
uploaded = files.upload()

# Step 3: Read the CSV file into a pandas DataFrame
df = pd.read_csv('netflix_titles.csv')

# Step 4: Print the DataFrame to verify
print("Data from netflix_titles.csv:")
print(df.head())  # print only first 5 rows for brevity

# Step 5: Check for missing values
print("\nMissing values in each column:")
missing_values = df.isnull().sum()
print(missing_values)

# Step 6: Calculate the percentage of missing values
missing_percentage = (missing_values / len(df)) * 100
print("\nPercentage of missing values in each column:")
print(missing_percentage)

# Step 7: Visualize missing values (optional but more useful)
missing_values.plot(kind='bar', figsize=(10, 6))
plt.title('Missing Values Count per Column')
plt.xlabel('Columns')
plt.ylabel('Count of Missing Values')
plt.show()

